<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.PrimaryActivity">

    <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bubbleTabBar"/>

    <com.fxn.BubbleTabBar
            android:id="@+id/bubbleTabBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorS1Brown"
            android:elevation="16dp"
            android:padding="7dp"
            app:bubbletab_menuResource="@menu/list"
            app:bubbletab_disabled_icon_color="@color/colorS1LightSky"
            app:bubbletab_horizontal_padding="20dp"
            app:bubbletab_icon_size="20dp"
            app:bubbletab_title_size="16sp"
            app:bubbletab_icon_padding="5sp"
            app:bubbletab_vertical_padding="10dp"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>