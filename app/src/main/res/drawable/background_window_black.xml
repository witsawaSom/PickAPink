            xmlns:tools="http://schemas.android.com/tools"
            android:opacity="opaque">
    <item android:drawable="@android:color/black" />
    <item
            android:id="@+id/selected"
            android:drawable="@android:color/transparent"
            android:state_selected="true" />

    <item
